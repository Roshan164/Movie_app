@model IEnumerable<MovieApp.Models.MovieInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@*For Display Movie Info*@
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.DateReleased)
            </th>
        </tr>
    </thead>
   <tbody>
    @foreach (var movie in Model)
    {
       <tr>
           <td>
               @Html.DisplayFor(modelItem => movie.MovieTitle)
           </td>
           <td>
               @Html.DisplayFor(modelItem => movie.DateReleased)
           </td>
           <td>
               <a asp-action="Edit" asp-route="@movie.Id">Edit</a>
               <a asp-action="Details" asp-route="@movie.Id">Details</a>
               <a asp-action="Delete" asp-route="@movie.Id">Delete</a>
           </td>
       </tr>
    }
   </tbody>
</table>